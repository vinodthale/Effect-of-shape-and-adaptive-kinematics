// ================================================================
// Validation Case: Gupta et al. (2022)
// NACA0008 Profile with Anguilliform Kinematics
// ================================================================
//
// EXACT PARAMETERS FROM PAPER:
// - NACA Profile: 0008 (8% thickness)
// - All other parameters same as NACA0006
// - Wavelength: Î»* = 0.65
// - Envelope: A(X) = 0.1 * exp[2.18(X-1)]
//
// ================================================================

// Include common parameters
Re = 5000.0
MU = 2.0e-4
RHO = 1.0

MAX_LEVELS = 3
REF_RATIO  = 4
N = 128

DELTA_FUNCTION       = "IB_4"
START_TIME           = 0.0e0
END_TIME             = 5.0
MAX_INTEGRATOR_STEPS = 100000000
GROW_DT              = 2.0e0
NUM_CYCLES           = 1
CONVECTIVE_OP_TYPE   = "PPM"
CONVECTIVE_FORM      = "CONSERVATIVE"
NORMALIZE_PRESSURE   = TRUE
CFL_MAX              = 0.3
DT_MAX               = 0.00025
VORTICITY_TAGGING    = TRUE
TAG_BUFFER           = 2
REGRID_CFL_INTERVAL  = 0.5
OUTPUT_U             = TRUE
OUTPUT_P             = TRUE
OUTPUT_F             = TRUE
OUTPUT_OMEGA         = TRUE
OUTPUT_DIV_U         = TRUE
ENABLE_LOGGING       = TRUE

InitHydroForceBox_0 {
   lower_left_corner  = -2.0, -3.0, 0.0
   upper_right_corner = 8.0, 3.0, 0.0
   init_velocity      = 1.0, 0.0, 0.0
}

VelocityBcCoefs_0 {
   acoef_function_0 = "1.0"
   acoef_function_1 = "1.0"
   acoef_function_2 = "1.0"
   acoef_function_3 = "1.0"
   bcoef_function_0 = "0.0"
   bcoef_function_1 = "0.0"
   bcoef_function_2 = "0.0"
   bcoef_function_3 = "0.0"
   gcoef_function_0 = "1.0"
   gcoef_function_1 = "0.0"
   gcoef_function_2 = "0.0"
   gcoef_function_3 = "0.0"
}

VelocityBcCoefs_1 {
   acoef_function_0 = "1.0"
   acoef_function_1 = "1.0"
   acoef_function_2 = "1.0"
   acoef_function_3 = "1.0"
   bcoef_function_0 = "0.0"
   bcoef_function_1 = "0.0"
   bcoef_function_2 = "0.0"
   bcoef_function_3 = "0.0"
   gcoef_function_0 = "0.0"
   gcoef_function_1 = "0.0"
   gcoef_function_2 = "0.0"
   gcoef_function_3 = "0.0"
}

IBHierarchyIntegrator {
   start_time           = START_TIME
   end_time             = END_TIME
   grow_dt              = GROW_DT
   num_cycles           = NUM_CYCLES
   regrid_cfl_interval  = REGRID_CFL_INTERVAL
   dt_max               = DT_MAX
   enable_logging       = ENABLE_LOGGING
   max_integrator_steps = MAX_INTEGRATOR_STEPS
   error_on_dt_change   = FALSE
   warn_on_dt_change    = FALSE
}

ConstraintIBMethod {
   delta_fcn                = DELTA_FUNCTION
   enable_logging           = ENABLE_LOGGING
   needs_divfree_projection = FALSE
   rho_solid                = RHO
   calculate_structure_linear_mom       = TRUE
   calculate_structure_rotational_mom   = FALSE

   PrintOutput {
   print_output          = TRUE
   output_interval       = 10
   output_drag           = TRUE
   output_torque         = TRUE
   output_power          = TRUE
   output_rig_transvel   = TRUE
   output_rig_rotvel     = FALSE
   output_com_coords     = TRUE
   output_moment_inertia = FALSE
   output_eulerian_mom   = TRUE
   output_dirname        = "./Results_NACA0008_Anguilliform"
   base_filename         = "NACA0008_Ang"
  }
}

num_structures = 1

ConstraintIBKinematics {
foil {
     structure_names                  = "naca0008"
     structure_levels                 = MAX_LEVELS - 1
     calculate_translational_momentum = 1,1,0
     calculate_rotational_momentum    = 0,0,0
     lag_position_update_method       = "CONSTRAINT_VELOCITY"
     tagged_pt_identifier             = MAX_LEVELS - 1, 0

     swimming_mode                    = "anguilliform"
     naca_profile                     = "0008"
     thickness_ratio                  = 0.08

     write_validation_data            = TRUE
     validation_log_file              = "validation_NACA0008_anguilliform.dat"
}
}

IBStandardInitializer {
   max_levels      = MAX_LEVELS
   structure_names = "naca0008"
   naca0008 {
      level_number = MAX_LEVELS - 1
   }
}

INSStaggeredHierarchyIntegrator {
   mu                         = MU
   rho                        = RHO
   start_time                 = START_TIME
   end_time                   = END_TIME
   grow_dt                    = GROW_DT
   convective_op_type         = CONVECTIVE_OP_TYPE
   convective_difference_form = CONVECTIVE_FORM
   normalize_pressure         = NORMALIZE_PRESSURE
   cfl                        = CFL_MAX
   dt_max                     = DT_MAX
   using_vorticity_tagging    = VORTICITY_TAGGING
   vorticity_abs_thresh       = 1.0, 2.0, 4.0, 8.0
   tag_buffer                 = TAG_BUFFER
   output_U                   = OUTPUT_U
   output_P                   = OUTPUT_P
   output_F                   = OUTPUT_F
   output_Omega               = OUTPUT_OMEGA
   output_Div_U               = OUTPUT_DIV_U
   enable_logging             = ENABLE_LOGGING

   VelocityHypreSolver {
      solver_type           = "Split"
      split_solver_type     = "PFMG"
      relative_residual_tol = 1.0e-12
      max_iterations        = 1
      enable_logging        = FALSE
   }

   VelocityFACSolver {
      num_pre_sweeps  = 0
      num_post_sweeps = 1
      coarse_solver_choice = "hypre"
      coarse_solver_tolerance = 1.0e-12
      coarse_solver_max_iterations = 1
      prolongation_method = "CONSTANT_REFINE"
      restriction_method  = "CONSERVATIVE_COARSEN"
      hypre_solver {
         solver_type           = "Split"
         split_solver_type     = "PFMG"
         relative_residual_tol = 1.0e-12
         max_iterations        = 1
         enable_logging        = FALSE
      }
   }

   PressureHypreSolver {
      solver_type           = "PFMG"
      rap_type              = 0
      relax_type            = 2
      skip_relax            = 1
      num_pre_relax_steps   = 2
      num_post_relax_steps  = 2
      relative_residual_tol = 1.0e-2
      max_iterations        = 100
      enable_logging        = FALSE
   }

   PressureFACSolver {
      num_pre_sweeps  = 0
      num_post_sweeps = 3
      coarse_solver_choice = "hypre"
      coarse_solver_tolerance = 1.0e-12
      coarse_solver_max_iterations = 1
      prolongation_method = "LINEAR_REFINE"
      restriction_method  = "CONSERVATIVE_COARSEN"
      hypre_solver {
         solver_type           = "PFMG"
         rap_type              = 0
         relax_type            = 2
         skip_relax            = 1
         num_pre_relax_steps   = 0
         num_post_relax_steps  = 3
         relative_residual_tol = 1.0e-12
         max_iterations        = 1
         enable_logging        = FALSE
      }
   }
}

Main {
   log_file_name               = "NACA0008_Anguilliform.log"
   log_all_nodes               = FALSE
   viz_writer                  = "VisIt","Silo"
   viz_dump_interval           = 50
   viz_dump_dirname            = "viz_NACA0008_Ang"
